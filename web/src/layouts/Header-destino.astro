---
import NavAlt from './NavAlt.astro';
import FormJsx from '../features/form/FormHorizontal';

const { heroImage } = Astro.props;
---

<header class="mx-auto relative w-full z-20">
	<div class="px-12">
		<NavAlt />
	</div>
  <section class="@container z-0">
		<div class:list={[
				"z-0 flex flex-col justify-end items-center align-middle rounded-b-4xl h-[800px] md:h-[960px] ",
				"px-8 bg-cover bg-bottom bg-no-repeat backdrop-brightness-50",
			]}
			style={`background-image: url('${heroImage ?? "/images/coast.jpg"}');`}
		>
			<div class="absolute w-full h-full size-20 bg-black/30 backdrop-brightness-90 z-0 rounded-b-4xl"></div>
			<div class:list={[
				"flex flex-col justify-center w-5xl z-10",
				"dark:bg-gradient-to-t from-slate-950 to-slate-900/0 to-40% py-16 mb-10"
			]}>
				<slot />				
			</div>
			<div id="cotizar" class="container mx-auto max-w-5xl shadow-xl mb-10">
				<div class="mt-6">
					<FormJsx client:load />
				</div>
			</div>
		</div>
	</section>
</header>
--- 
import Logo from './Logo.astro';
import Link from '../components/Link.astro';
import ModeSwitch from './ModeSwitch.astro';
---

<div class=" flex h-16 items-center justify-between">
  <div class="flex-1 md:flex md:items-center md:gap-12">
    <a class="block" href="#">
      <span class="sr-only">Home</span>
      <Logo />
    </a>
  </div>

  <div class="md:flex md:items-center md:gap-12">
    <nav aria-label="Global" class="hidden md:block">
      <ul class="flex items-center gap-6">
        <li>
          <Link text="Servicios" href="#" />
        </li>
        <li>
          <Link text="Nosotros" href="#" />
        </li>
        <li>
          <Link text="Testimonios" href="#" />
        </li>
        <li>
          <Link text="Contacto" href="#" />
        </li>
      </ul>
    </nav>

    <div class="flex items-center">
      <div class="sm:flex sm:gap-4">
        <a
          class="rounded-md px-5 py-2.5 text-sm font-medium text-white shadow-sm transition bg-blue-700 hover:bg-blue-800"
          href="#"
        >
          Reservar ahora
        </a>
        <ModeSwitch client:load />
      </div>

      <div class="block md:hidden">
        <button
          class="rounded-sm bg-slate-100 p-2 text-slate-600 transition hover:text-slate-600/75"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="size-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>